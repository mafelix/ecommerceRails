<div class="container">
<%=form_for([:admin, @product], html:{role: 'form'}) do |f| %>

  <% if @product.errors.any? %>
    <div>
    <%= pluralize(@product.errors.count, "errors") %> prevented the product from being created:
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <%end%>
      </ul>
    </div>
  <%end%>


    <em><bold>Enter new information:</bold></em>

        <div class="form-group">
          <%= f.label :category%>
          <%= f.number_field :category, min: 1, max: 3%> 1)Green, 2)Accessories, 3) Herbal<br/>
        </div>


        <div class="form-group">
          <%= f.label :name%>
          <%= f.text_field :name, class: 'form-control'%><em> What the product should be named.</em><br/>
        </div></br>


        <div class="form-group">
          <%= f.label :price %>
          <%= f.number_field :price, class: 'form-control'%><em> The price of the product</em><br/>
        </div>


        <div class="form-group">
          <%= f.label :picture %>
          <%= f.text_field :picture, class: 'form-control' %><em> The picture of the product</em><br/>
        </div>



        <div class="form-group">
          <%= f.label :description%>
          <%= f.text_area :description,  class: 'form-control', rows: 5 %><br/>
        </div>


        <div class="form-group">
          <div class="row">
              <div class="col-md-2">
                <%= f.label :active %>
                <%= f.check_box :active %>
              </div>

              <div class="col-md-2">
                <%= f.label :featured %>
                <%= f.check_box :featured %>
              </div>
          </div>
        </div>



        <div class="form-group">
          <%=f.submit "Save", data: {confirm: "Are you sure you want to save these changes?"}%>
        </div>
      </li>
    <%end%>
  </ul>
</div>
