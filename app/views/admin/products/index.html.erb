<h1 class="text-center">Admin Panel</h1>

<div class="container">
  <div class="row text-center">
    <button><%=link_to 'Add new product', new_admin_product_path%></button>
    <button><%=link_to 'Orders', admin_orders_path%></button>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="img-responsive">

    <% @products.each do |product| %>
        <div class="col-md-3">
      <%if product.active == true%>
           <div class="thumbnail" style="background-color: green">
      <%elsif product.active == false%>
           <div class="thumbnail" style="background-color: red">
      <%end%>
             <%=link_to image_tag(product.picture), edit_admin_product_path(product)%>
              Product Name:<%=product.name%> <button><%=link_to 'Edit', edit_admin_product_path(product)%></button><button><%=link_to 'Delete', admin_product_path(product), method: :delete, data: {confirm: "Are you sure you want to delete this product?" }%>
          </div>
        </div>
      <%end%>

    </div>
  </div>
</div>
