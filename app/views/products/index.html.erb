        <%@products.each do |product|%>
          <%=link_to product_path(product) do %>
            <div class="col-md-3">  
              <!-- link_to for title and image to product#show(product) -->
              <div class="thumbnail">
               <%=image_tag(product.picture)%>
                <div class="caption">
                  <h3><%=product.name.titleize%><%=product.id%></h3>
          <%end%>
                    <p><%=number_to_currency(product.price)%></p>
                  <p><%=product.description%></p>
                </div>
              </div>
            </div>
        <%end%>
    
      </div>
    </div>
</div>

