<div id="footer" class="text-center text-muted footer">
  <div class="container">
    <div class="row">
      <div class="text-center col-md-12">
        <a data-toggle="modal" data-target="#aboutModal" >About</a>
        <a data-toggle="modal" data-target="#tosModal">Terms Of Service</a>
      </div>
    </div>
    <br />

    <div class="modal fade" id="aboutModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">About</h4>
          </div>
          <div class="modal-body">
            <p>
              <%=Faker::Lorem.paragraph(15)%>
            </p>
          </div>
          <div class="modal-footer text-center">
              Copyright Platinum Herbal Society
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="tosModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Terms of Service</h4>
          </div>
          <div class="modal-body">
            <p>
              <%=Faker::Lorem.paragraph(15)%>
            </p>
          </div>
          <div class="modal-footer">
            Copyright Platinum Herbal Society
          </div>
        </div>
      </div>
    </div>

    <div class="row">

      <div class="text-center col-md-12">
          Connect with us:
        <div class="socialbtns">

            <button class="btn btn-facebook"><i class="fa fa-facebook"></i></button>
            <button class="btn btn-twitter"><i class="fa fa-twitter"></i></button>
            <button class="btn btn-instagram"><i class="fa fa-instagram"></i></button>
        
        </div>
      </div>
    </div>
    <br />
    <br />
    <div class="row">

      <div class="text-center col-md-12">
        Copyright 2016 Platinum Canna Herbal Society
      </div>
    </div>
    <% if current_user%>
      <% if admin?%>
        <button class="btn"><i class="fa fa-primary-btn"><%=link_to 'admin section', admin_products_path %></i></button>
      <%end%>
    <%end%>

  </div>
</div>
